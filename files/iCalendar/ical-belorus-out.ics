BEGIN:VEVENT
SUMMARY:День инвалидов Республики Беларусь
DTSTART;VALUE=DATE:20171203
DTSTAMP:20171231T220112Z
UID:20171231T230112CET-1151Vp6JGh@calend.ru/belorus/
